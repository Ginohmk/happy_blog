
 <% @users.each do |user| %>
    <div class= 'user'>
      <div class = 'user_image'>
        <img src ="<%= user.photo %>" alt= 'User image' />
      </div>

      <div class = 'user_info'>
        <h1> 
          <%= link_to user.name, user_path(user.id) %>
         </h1>
        <p>Number of posts: <%= user.posts_counter %></p>
      </div>
    </div>
<%end%> 